#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

DEB_INSTALL_EXAMPLES_WXCOINd += debian/examples/*
DEB_INSTALL_MANPAGES_WXCOINd += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix WXCOINd USE_ASM=1 USE_LEVELDB=1
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f WXCOIN-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake WXCOIN-qt.pro USE_ASM=1 USE_LEVELDB=1

# Ensure wrapper is set executable
binary-post-install/WXCOINd:
	chmod +x $(cdbs_curdestdir)usr/bin/WXCOINd
binary-post-install/WXCOIN-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/WXCOIN-qt
